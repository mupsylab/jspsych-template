{
  "name": "jspsych-template",
  "version": "1.1.0",
  "anthor": "mupsy",
  "build": {
    "appId": "jspsychTemplate",
    "productName": "jspsych-template",
    "icon": "public/favicon.ico",
    "copyright": "Copyright Â© 2023",
    "compression": "maximum",
    "asar": true,
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "legalTrademarks": "mupsy2023"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false,
      "removeDefaultUninstallWelcomePage": true
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "**/src/electron-main.js"
    ]
  },
  "main": "src/electron-main.js",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "vue-cli-service build && electron .",
    "pack": "electron-builder -p always"
  },
  "dependencies": {
    "@jspsych/plugin-call-function": "^1.1.2",
    "@jspsych/plugin-fullscreen": "^1.1.2",
    "@jspsych/plugin-html-button-response": "^1.1.2",
    "@jspsych/plugin-html-keyboard-response": "^1.1.1",
    "@jspsych/plugin-instructions": "^1.1.2",
    "@jspsych/plugin-preload": "^1.1.2",
    "@jspsych/plugin-survey-html-form": "^1.0.2",
    "core-js": "^3.8.3",
    "jquery": "^3.6.3",
    "jspsych": "^7.3.0",
    "vue": "^3.2.13",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "strict": "off",
      "vue/no-unused-components": "off",
      "generator-star-spacing": "off",
      "no-debugger": "off",
      "no-tabs": "off",
      "no-unused-vars": "off",
      "no-console": "off",
      "no-irregular-whitespace": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "vue/no-unused-components": [
    "error",
    {
      "ignoreWhenBindingPresent": true
    }
  ]
}
